#include<bits/stdc++.h>
#include<string.h>
#define ll long long int
#define br <<"\n";
#define FOR(i,n) for(int i=0;i<n;i++)
#define FORran(i,n,a) for(int i=n;i<a;i++)
#define FORrev(i,n) for(int i = n-1; i >= 0; i--)
#define fastio ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0);
using namespace std;
int main()
{
    fastio
    int a;
    cin>>a;
    if(a%4==0){
        if(a%100!=0)
            cout<<"Yes";
        else{
            if(a%400==0)
                cout<<"Yes";
            else
                cout<<"No";
        }
    }
    else
        cout<<"No";
    return 0;
}
